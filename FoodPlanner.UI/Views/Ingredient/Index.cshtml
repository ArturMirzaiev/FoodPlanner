@model List<FoodPlanner.Application.Dtos.IngredientDto>
@{
    ViewData["Title"] = "Інгредієнти";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Додати інгредієнт</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Назва</th>
        <th>Міра</th>
        <th style="width: 150px; text-align: right;">Дії</th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <tr>
            <td>@item.Name</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>