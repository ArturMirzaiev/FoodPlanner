<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FoodPlanner.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                🍽️ FoodPlanner
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Person" asp-action="Index">Персонажі</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Menu" asp-action="Create">Створити меню</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recipe" asp-action="Index">Рецепти</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Planner" asp-action="Index">Планувальник</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Shopping" asp-action="Index">Покупки</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ingredient" asp-action="Index">Інгредієнти</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Вхід</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-center mt-5 py-3">
    &copy; 2025 - FoodPlanner.UI
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
